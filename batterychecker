while true
do
        bat=$(acpi -i | grep charging | sed 's/[^,]*, // ; s/%.*//')

        if [ $bat -lt 20 ]
        then
                notify-send -u critical "Battery $bat%"
        fi
        echo $bat

		if [ $bat -lt 2 ]
        then
                ffplay /home/jake/Media/Music/Foster_The_People*
        fi

        sleep 300
done
